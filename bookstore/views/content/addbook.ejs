<h1>Add New Book</h1>

<form action="" method="post">
    <div>
        <h3>Book Title</h3>
        <input type="text" name="title" required>
    </div>

    <div>
        <h3>Book Prise</h3>
        <input type="number" name="prise" required>
    </div>

    <div>
        <h3>Book Pages</h3>
        <input type="number" name="pages" required>
    </div>
    <div>
        <h3>Author</h3>
        <select required name="author">
            <option>-----------</option>
            <% authors.forEach(x=>{  %>
                <option value="<%= x%>"><%= x%></option>
            <% })%>
        </select>
    </div>
    <div>
        <h3>Book Description</h3>
        <textarea name="description" id="" cols="30" rows="10" required></textarea>
    </div>
    <button type="submit">Add This Book</button>
</form>